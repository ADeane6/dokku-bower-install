#!/usr/bin/env bash
set -eo pipefail; [[ $DOKKU_TRACE ]] && set -x
APP="$1";  IMAGE="$2"

COMMAND=$(cat <<EOF
PATH=$PATH:/app/vendor/node/bin &&
cd /app &&
npm install -g bower &&
bower install
EOF
)

id=$(docker run -i $IMAGE /bin/bash -c "$COMMAND")
test $(docker wait $id) -eq 0
docker commit $id $IMAGE > /dev/null